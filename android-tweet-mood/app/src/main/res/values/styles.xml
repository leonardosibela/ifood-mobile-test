<resources>
    <!-- App Themes -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppThemeFullScreen" parent="@style/AppThemeNoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <!-- Buttons -->
    <style name="MainButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="BorderlessButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorAccent</item>
    </style>


    <!-- Text -->
    <style name="PrimaryText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:lineSpacingExtra">@dimen/primary_text_line_spacing_extra</item>
    </style>

</resources>
